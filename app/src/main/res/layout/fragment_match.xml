<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.launch.twinkle.twinkle.MatchFragment"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <ImageView
        android:id="@+id/match_picture"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_test" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="180dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emily K."
            android:textColor="#000000"
            android:textSize="28dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/match_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="24 yrs old"
            android:textColor="#B8B8B8"
            android:textSize="18dp"
            android:paddingRight="15dp"
            android:paddingTop="17dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="See Full Profile"
            android:background="@color/primary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp">
        <TextView
            android:id="@+id/match_age"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:text="Ian, she seems like a really nice girl. You definitely should at least go out for a cup of tea ..."
            android:textColor="#B8B8B8"
            android:textSize="18dp"
            android:paddingTop="17dp"
            android:background="#FFFFFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="7 More Thoughts in your Circle"
            android:background="@color/primary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="2">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="20dp"
            android:background="#B8B8B8"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="20dp"
            android:background="#E91E63"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:layout_weight="1"/>
    </LinearLayout>
    </RelativeLayout>

</FrameLayout>
