<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context="com.launch.twinkle.twinkle.MatchFragment">

    <ImageView
        android:id="@+id/match_picture"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_test" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="180dp"
        android:background="#FFFFFF"
        android:id="@+id/name_block">

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Emily K."
            android:textColor="#000000"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/match_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingTop="22dp"
            android:text="24 yrs old"
            android:textColor="#B8B8B8"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp">

    </LinearLayout>

  <include layout="@layout/chat_message"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/name_block"
           android:layout_marginTop="25dp"/>
  <Button
    android:id="@+id/match_more_messages"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="70dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/primary"
    android:text="12 more messages"
    android:textAllCaps="false"
    android:textSize="18dp" />

  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:weightSum="2">

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="#B8B8B8"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="No"
      android:textAllCaps="false"
      android:textSize="20dp" />

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="#E91E63"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="Yes"
      android:textAllCaps="false"
      android:textSize="20dp" />
  </LinearLayout>

    <com.launch.twinkle.twinkle.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/purple_background"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="238dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:src="@drawable/chat" />

</RelativeLayout>
